		while(id[n]==n) {
			System.out.println("ID \t"+"Student Name \t"+"\tEmail ID");
			System.out.println(id[n]+"      "+name[n]+"\t       "  +email[n]);
			break;
		}
case 3:
	System.out.println("3.Delete Students by id :");
	int n1 = sc.nextInt();
		while(id[n1]!=-1) {
			id[n1]=n1;
			remove(n1);
			System.out.println("The Element removed is:"+n1);
			System.out.println(id[n1]+"      "+name[n1]+"\t       "  +email[n1]);
			break;
		}
		
case 4:
	System.out.println("4.Exit ");
	break;
	
default:System.out.println("No Such Records Found :\n");	
}}

